<section>
    <div class="container mt-4">
    <div class="row">
        <div class="col-md-6">
            <h2 class="text-center">Edit Product</h2>
            <form action="/admin/edit-product/{{product._id}}" method="post" enctype="multipart/form-data" >
                <label for="">Name</label>
                <input type="text" class="form-control" name="Name" value="{{product.Name}}">

                <label for="">Category</label>
                <input type="text" class="form-control" name="Category" value="{{product.Category}}">

                <label for="">Price</label>
                <input type="text" class="form-control" name="Price" value="{{product.Price}}">

                <label for="">Description</label>
                <input type="text" class="form-control" name="Description" value="{{product.Description}}">

                <label for="">Image</label>
                <img src="/product-images/{{product._id}}.jpg" alt="" style="width: 100px;height: auto;" id="imagePreview" class="pt-3 pb-2">

                <input type="file" class="form-control" name="Image" onchange="viewImage(event)">

                <button type="submit" class="btn btn-success mt-4">submit</button>
            </form>
        </div>
    </div>    
    </div>
</section>
<script>
    function viewImage(event){
        var image = document.getElementById('imagePreview');
        image.src = URL.createObjectURL(event.target.files[0]);
    }
</script>