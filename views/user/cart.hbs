<section>
    <div class="container">
        <table class="table mt-5">
            <thead>
                <tr>
                    <th scope="col">Item</th>
                    <th scope="col">Title</th>
                    <th scope="col">Qantity</th>
                </tr>
            </thead>
        
        <tbody>
            {{#each products}}
            <tr>
                
                <td>
                    <img alt="" style="width: 70px;height: 70px;" src="/product-images/{{this.product._id}}.jpg">
                </td>
                <td>{{this.product.Name}}</td>
                
                <td>
                    <button class="cart-item-count me-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',-1,'{{this.quantity}}')">-</button>{{this.quantity}}<button class="cart-item-count ms-3" onclick="changeQuantity('{{this._id}}','{{this.product._id}}',1,'{{this.quantity}}')">+</button>
                </td>
                <td>
                    <a href="" class="btn btn-danger " onclick="removeproduct('{{this._id}}','{{this.product._id}}')">Remove</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
        </table>
    </div>
</section>

<script>
    function changeQuantity(cartId,proId,count,quantity){
        $.ajax({
            url:'/change-product-quantity',
            data:{
                cart:cartId,
                product:proId,
                count:count,
                quantity:quantity
            },
            method:'POST',
            success:(response)=>{
                alert(response)
                location.reload()
                
            }
        })
    }

    function removeproduct(cartId,proId){
        $.ajax({
            url:'/remove-product',
            data:{
                cart:cartId,
                product:proId
            },
            method:'POST',
            success:(response)=>{
                alert(response)
                location.reload()
            }
        })
    }       
</script>