<div class="row">
    <div class="col-md-6 m-auto">
        <div class="container mt-5 gap-3">
            <h2 class="text-center">Create an Account</h2>
            <form action="/signup" method="post">
                <div class="form-group p-2">
                    <label for="name">Name</label>
                    <input type="text" placeholder="Enter name" class="form-control" id="name" name="name">

                </div>
                <div class="form-group p-2">
                    <label for="email">Email</label>
                    <input type="email" placeholder="Enter email" class="form-control" id="email" name="email">
                </div>
                <div class="form-group p-2 mb-2">
                    <label for="password">Password</label>
                    <input type="password" placeholder="Enter password" class="form-control" id="password"
                        name="password">
                </div>
                
                <a href="/login">Already have an account? Login</a>
                <button type="submit" class="btn btn-primary float-end">Signup</button>

            </form>
        </div>
    </div>
</div>